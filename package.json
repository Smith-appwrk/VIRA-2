{
    "name": "vira2",
    "version": "1.0.0",
    "msteams": {
        "teamsAppId": null
    },
    "description": "Microsoft 365 Agents Toolkit RAG Bot Sample with customize data source and Teams AI Library",
    "engines": {
        "node": "20 || 22"
    },
    "author": "Microsoft",
    "license": "MIT",
    "main": "./lib/src/index.js",
    "scripts": {
        "dev:teamsfx": "env-cmd --silent -f .localConfigs npm run dev",
        "dev:teamsfx:testtool": "env-cmd --silent -f .localConfigs.playground npm run dev",
        "dev:teamsfx:launch-testtool": "env-cmd --silent -f env/.env.playground teamsapptester start",
        "dev": "nodemon --exec node --inspect=9239 --signal SIGINT -r ts-node/register ./src/index.ts",
        "build": "tsc --build && shx cp -r ./src/app/instructions.txt ./lib/src/app && shx cp -r ./src/data ./lib/src && shx mkdir -p ./lib/src/data/conversations && shx mkdir -p ./lib/src/data/graphs",
        "start": "node ./lib/src/index.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "watch": "nodemon --exec \"npm run start\"",
        "migrate:kb": "ts-node scripts/migrateKnowledgeBase.ts"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com"
    },
    "dependencies": {
        "@azure/core-auth": "^1.10.1",
        "@azure/identity": "^4.11.1",
        "@azure/search-documents": "^12.2.0",
        "@microsoft/teams.ai": "^2.0.0",
        "@microsoft/teams.apps": "^2.0.0",
        "@microsoft/teams.common": "^2.0.0",
        "@microsoft/teams.openai": "^2.0.0",
        "axios": "^1.6.0",
        "canvas": "^3.2.0",
        "dotenv": "^17.2.3",
        "mssql": "^11.0.1",
        "openai": "^4.88.0",
        "vega": "^6.1.2",
        "vega-lite": "^6.1.0"
    },
    "devDependencies": {
        "@types/mssql": "^9.1.7",
        "@types/node": "^20.0.0",
        "env-cmd": "^10.1.0",
        "nodemon": "^3.1.7",
        "shx": "^0.3.3",
        "ts-node": "^10.4.0",
        "typescript": "~5.8.3"
    }
}
